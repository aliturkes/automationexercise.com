{
  "name": "device",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "brand": {
      "type": "string",
      "required": true
    },
    "model": {
      "type": "string"
    },
    "storage": {
      "type": "string"
    },
    "color": {
      "type": "string"
    },
    "imei": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "createDate": {
      "type": "date",
      "defaultFn": "now"
    },
    "status": {
      "type": "string",
      "enum": [
        "open",
        "sold",
        "reversed"
      ],
      "default": "open"
    },
    "deleted": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "USER",
      "principalId": 1,
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
